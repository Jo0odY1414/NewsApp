<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/search_title">

    <EditTextPreference
        android:defaultValue="@string/search_by_from_date_default"
        android:inputType="date"
        android:key="@string/search_by_from_date_key"
        android:selectAllOnFocus="true"
        android:title="@string/search_by_from_date_label" />

    <EditTextPreference
        android:defaultValue="@string/search_by_to_date_default"
        android:inputType="date"
        android:key="@string/search_by_to_date_key"
        android:selectAllOnFocus="true"
        android:title="@string/search_by_to_date_label" />

</PreferenceScreen>